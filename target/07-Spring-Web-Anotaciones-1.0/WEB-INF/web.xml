<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/miAplicacion-service.xml
            /WEB-INF/miAplicacion-data.xml
            /WEB-INF/miAplicacion-security.xml
        </param-value>
    </context-param>
    <!-- Audio WS560085.WMA -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class><!-- cargador de los ficheros deconfigruacion anteriores -->
    </listener>
    <servlet>
        <servlet-name>miAplicacion</servlet-name><!-- de aquÃ­ sale el nombre del fichero: miAplicacion-servlet.xml -->
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>miAplicacion</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.do</welcome-file>
    </welcome-file-list>
</web-app>
